@model LibrarySystemProject.Models.ReaderViewModel.ReaderDeleteViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; margin-top:30px; color:forestgreen; text-decoration:underline; margin-bottom: 20px; font-size:35px;">Delete Reader</h2>

<h3 style="text-align:center;">Are you sure you want to delete this reader?</h3>
<hr />

<div class="col-md-offset-4">
    
    <dl class="dl-horizontal">

        <dt style="color: forestgreen; font-size:20px;">
            @Html.DisplayName("First Name")
        </dt>

        <dd style="font-size:20px;">
            @Html.DisplayFor(model => model.firstName)
        </dd>

        <dt style="color: forestgreen; font-size:20px;">
            @Html.DisplayName("Last Name")
        </dt>

        <dd style="font-size:20px;">
            @Html.DisplayFor(model => model.lastName)
        </dd>

        <dt style="color: forestgreen; font-size:20px;">
            @Html.DisplayName("Reader Card")
        </dt>

        <dd style="font-size:20px;">
            @Html.DisplayFor(model => model.readerCard)
        </dd>

        <dt style="color: forestgreen; font-size:20px;">
            @Html.DisplayName("Expire Date")
        </dt>

        <dd style="font-size:20px;">
            @Html.DisplayFor(model => model.expireDate)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-md-offset-2 col-md-10" style="margin-bottom:30px;">
            <input type="submit" value="Delete" class="btn-success" style="border-radius:15px; height:2.5em; width:5em;"  /> 
            
            <button class="btn-default" style="border-radius:15px; height:2.5em; width:5em;">
                @Html.ActionLink("Cancel", "Index")
            </button>
        </div>
    }
</div>
