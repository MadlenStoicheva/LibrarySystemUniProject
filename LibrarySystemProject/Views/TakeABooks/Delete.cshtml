@model LibrarySystemProject.Models.TakeABookViewModel.TakeABookDeleteViewModel

@{
    ViewBag.Title = "Delete";
}

<h2 style="text-align:center; margin-top:30px; color:forestgreen; text-decoration:underline; margin-bottom: 20px; font-size:35px;">Delete</h2>

<h4 style="text-align:center;">Are you sure you want to delete this?</h4>
<hr />
<div class="col-md-offset-4">
    @*<h4>TakeABookDeleteViewModel</h4>*@
    <dl class="dl-horizontal">
        <dt style="color: forestgreen; font-size:20px;">
            @Html.DisplayName("Book Id")
        </dt>

        <dd style="font-size:20px;">
            @Html.DisplayFor(model => model.BookId)
        </dd>

        <dt style="color: forestgreen; font-size:20px;">
            @Html.DisplayName("Reader Id")
        </dt>

        <dd style="font-size:20px;">
            @Html.DisplayFor(model => model.ReaderId)
        </dd>

        <dt style="color: forestgreen; font-size:20px;">
            @Html.DisplayName("Date Taken")
        </dt>

        <dd style="font-size:20px;">
            @Html.DisplayFor(model => model.dateTaken)
        </dd>

        <dt style="color: forestgreen; font-size:20px;">
            @Html.DisplayName("Date For Return")
        </dt>

        <dd style="font-size:20px;">
            @Html.DisplayFor(model => model.dateForReturn)
        </dd>

        <dt style="color: forestgreen; font-size:20px;">
            @Html.DisplayName("Date Return")
        </dt>

        <dd style="font-size:20px;">
            @Html.DisplayFor(model => model.dateReturn)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="col-md-offset-2 col-md-10" style="margin-bottom:30px;">
            <input type="submit" value="Delete" class="btn-success" style="border-radius:15px; height:2.5em; width:5em;"  /> 

            <button class="btn-default" style="border-radius:15px; height:2.5em; width:5em;">
                @Html.ActionLink("Cancel", "Index")
            </button>
        </div>
    }
</div>
